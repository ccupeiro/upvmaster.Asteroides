<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.masterupv.carloscupeiro.asteroides">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MiTheme">
        <activity android:name=".actividades.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".actividades.MainActivity"></activity>
        <activity
            android:name=".actividades.AcercaDeActivity"
            android:label="Acerca de ..."
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".actividades.PreferenciasActivity" />
        <activity android:name=".actividades.PuntuacionesActivity" />
        <activity
            android:name=".actividades.JuegoActivity"
            android:screenOrientation="landscape"
            android:theme="@style/ThemeCompleta" />
    </application>
</manifest>